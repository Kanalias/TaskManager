<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.TaskController">
   <children>
      <Label text="Название дела" />
      <TextField fx:id="nameTaskText" />
      <Label text="Описание дела" />
      <TextArea fx:id="descriptionTaskText" prefHeight="200.0" prefWidth="200.0" />
      <CheckBox fx:id="statusCheckBox" mnemonicParsing="false" text="Статус готовности" visible="false" />
      <HBox>
         <children>
            <Button fx:id="saveTaskButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" text="Сохранить" />
            <Button fx:id="deleteTask" mnemonicParsing="false" text="Удалить" visible="false" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
